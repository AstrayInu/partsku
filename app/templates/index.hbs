<div class="container-fluid">
  <div class="row landing-bg">
    <div class="col">
      <div class="main-island">
        <p class="buy-cp">BUY TRUSTWORTHY CAR PARTS</p>
        <div class="search-landing">
          <Input @class="landing-search-box" @placeholder="Search car part by SKU or name here" @value={{this.searchQuery}} @insert-newline={{action "search"}} />
          <button class="landing-search-btn" onclick={{action "search"}}>Search</button>
        </div>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-8 recommended-island">
      <p class="landing-head-title">RECOMMENDED FOR YOU</p>
      <p class="landing-subtitle">EXPLORE AWESOME PRODUCTS</p>
      <div class="col brand-list">
      {{#each this.indexBrands1 as |item|}}
        <span class="col">
          <a href="/catalog?brand={{item.name}}">
            <img class="brand-list-img" src="{{item.imgUrl}}">
          </a>
        </span>
      {{/each}}
      </div>
      <div id="brand-list2" class="col brand-list d-none">
        {{#each this.indexBrands2 as |item|}}
          <span class="col">
            <img class="brand-list-img" src="{{item.imgUrl}}">
          </span>
        {{/each}}
      </div>
      <div class="">
        <button class="btn explore-landing-btn" onclick={{action "showBrands"}}>Explore Other Brands</button>
      </div>
    </div>
  </div>
  <div class="row justify-content-center new-item-div">
    <div class="col-8 new-item-island">
      <p class="landing-head-title">NEW ITEMS</p>
      <p class="landing-subtitle">RECENTLY ADDED SPARE PARTS JUST FOR YOU</p>
      <div class="row new-item-list">
        <div class="col-6 new-item-left">
          <div class="row justify-content-end top-new-item">
            {{#each this.thing as |item|}}
              <div class="col-md-6">
                <Products::ItemCard @source="new-item-left" @data={{item}}/>
              </div>
            {{/each}}
          </div>
        </div>
        <div class="col-6 new-item-right">
          <Products::ItemCard @source='new-item-right' @data={{this.thing1}}/>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-10 abt-us-island">
      <p class="landing-head-title">ABOUT US</p>
      <p class="landing-subtitle">OUR VISION AND MISSION</p>
      <div class="row abt-us-container">
        <div class="col about-us-left">
          <div class="row three-boxes">
            <div class="col-4 about-us-imgs wwd-img">
              <img src="https://res.cloudinary.com/partsku/image/upload/v1623321494/partsku/What_we_do_logo_gkgp6z.png">
            </div>
            <div class="col about-us-txt">
              <p class="abt-us-maintitle">What we do?</p>
              <p class="abt-us-subtitle">We provide you a safe and easy way to buy spare part(s) for your beloved vehicle</p>
            </div>
          </div>
          <div class="row three-boxes">
            <div class="col-4 about-us-imgs om-img">
              <img src="https://res.cloudinary.com/partsku/image/upload/v1623321494/partsku/vision_logo_dtc96m.png">
            </div>
            <div class="col about-us-txt">
              <p class="abt-us-maintitle">Our Vision</p>
              <p class="abt-us-subtitle">Make spare part market great again!</p>
            </div>
          </div>
          <div class="row three-boxes">
            <div class="col-4 about-us-imgs">
              <img src="https://res.cloudinary.com/partsku/image/upload/v1623321493/partsku/mission_logo_zslsjy.png">
            </div>
            <div class="col about-us-txt">
              <p class="abt-us-maintitle">Our Mission</p>
              <p class="abt-us-subtitle">To graduate</p>
            </div>
          </div>
        </div>
        <div class="col about-us-right">
          <img src="https://res.cloudinary.com/partsku/image/upload/v1623320841/partsku/About_Us_pic_lpczjk.png">
        </div>
      </div>
    </div>
  </div>
</div>