<div class="catalog-bg">
  <div class="container product-detail-container">
    <div class="shop-info-box">
      <div class="row">
        <div class="col left-shop-info align-self-center">
          <div class="row">
            <div class="col-3">
              <img class="shop-info-pp" src="{{this.sellerImg}}" width="100">
            </div>
            <div class="col-9 align-self-center">
              <p class="shop-info-name">{{this.sellerAttr.shop_name}}</p>
              <div class="row">
                <div class="col">
                  <button class="btn visit-shop-btn">Visit Shop</button>
                </div>
                <div class="col">
                  <button class="btn wa-shop-btn" onclick={{action 'waSeller'}}>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-whatsapp" viewBox="0 0 16 16">
                      <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-7 right-shop-info align-self-center">
          <div class="shop-stat-box">
            <div class="row text-center">
              <div class="col-3">
                <p class="shop-info-stat">Rating: <span class="shop-info-stat-val">18k</span></p>
                <p class="shop-info-stat">Products: <span class="shop-info-stat-val">147</span></p>
              </div>
              <div class="col">
                <p class="shop-info-stat">Chat reply percentage: <span class="shop-info-stat-val">100%</span></p>
                <p class="shop-info-stat">Avg chat reply time: <span class="shop-info-stat-val">1 hour</span></p>
              </div>
              <div class="col">
                <p class="shop-info-stat">Joined: <span class="shop-info-stat-val">1 month ago</span></p>
                <p class="shop-info-stat">Followers: <span class="shop-info-stat-val">2.2k</span></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row product-detail-top">
      <div class="col-5">
        <div class="p-detail-top-left">
          <div class="p-detail-main-img justify-content-center">
            <img id="p-detail-main-img" src="{{this.mainImg}}" width="437">
          </div>
          <div class="row">
            <div class="p-detail-sub-row">
              {{#each this.productAttr.imgUrl as |thing|}}
                <div class="col-md-3 justify-content-center">
                  <div class="p-detail-sub-img">
                    <img src="{{thing}}">
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
      <div class="col p-detail-top-right">
        <h1 class="main-product-name">{{this.product.name}}</h1>
        <div class="row text-center">
          <div class="col align-self-center">
            <span class="p-detail-rating">5.0</span>
            <StarRating />
          </div>
          <div class="col p-detail-rates">139 ratings</div>
          <div class="col p-detail-sold">{{this.product.sold}} sold</div>
        </div>
        <h1 class="main-product-price">{{format-currency this.product.price}}</h1>
        <p class="main-product-sku">SKU: {{this.product.sku}}</p>
        <div class="d-flex align-self-center">
          <p class="main-product-quantity">Quantity</p>
          <button class="btn quantity-btn" onclick={{action "plusQuantity"}}>+</button>
          <Input @class="quantity-input-box text-center" @value={{this.quantity}} />
          <button class="btn quantity-btn" onclick={{action "minQuantity"}}>-</button>
          <p class="main-product-stock">{{this.product.stock}} items left</p>
        </div>
        <div class="d-flex transaction-btn-div">
          <button class="btn add-to-cart-btn" onclick={{action "addToCart"}}>ADD TO CART</button>
          <button class="btn buy-now-btn" onclick={{action "buyNow"}}>BUY NOW</button>
        </div>
      </div>
    </div>
    <div class="row product-detail-bottom">
      <div class="col-8 product-decription-container">
        <div class="row product-detail-spesification">
          <div class="col">
            <div class="row">
              <p class="description-title">Product Specification</p>
            </div>
            <div class="row d-block spec-list">
              <p>Categories: <span class="spec-value">{{this.itemCategory}}</span></p>
              <p>Brand: <span class="spec-value">{{this.product.brand}}</span></p>
              {{!-- <p>Warranty: <span class="spec-value">1 Year</span></p> --}}
              <p>Stock: <span class="spec-value">{{this.product.stock}}</span></p>
              <p>Sent from: <span class="spec-value">Tangerang city</span></p>
            </div>
          </div>
        </div>
        <div class="row product-detail-description">
          <div class="col">
            <div class="row">
              <p class="description-title">Product Description</p>
            </div>
            <div class="row d-block description-content">
              {{#if this.product.description}}
                {{{this.product.description}}}
              {{else}}
                Oh no! the seller does not specify the description of this product :(
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      <div class="col">

      </div>
    </div>
  </div>
</div>