<style>
  .footer {
    display: none;
  }

  body {
    overflow: hidden;
  }
</style>
<div class="secondary-color seller-products-container h-100vh">
  <div class="container-fluid h-100">
    <div class="row justify-content-center pt-3">
      <div class="col-sm-10">
        <div class="row justify-content-end mt-5 mb-4">
          <div class="col-sm-6 pr-5">
            <div class="row justify-content-end mr-3">
              <div class="col-sm-3">
                <button id="new-btn" class="btn-red-border-radius" onclick={{action "changeView" "unfinished"}}>
                  In Progress
                </button>
              </div>
              <div class="col-sm-3">
                <button id="appr-btn" class="btn-transparent" onclick={{action "changeView" "done"}}>
                  Done
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="row justify-content-end m-3">
          <div class="col-sm-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
              <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
              class="bi bi-search" viewBox="0 0 16 16">
              <path
                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
            </svg>
          </div>
        </div>
        <div class="row justify-content-center">
          <ProfileCard @class="col-sm-3" @where="user-orders" />
          <div class="col-sm-7 mx-4 scrollable h-650px">
            {{#if (eq this.shows "done")}}
              {{#if this.done}}
              
              {{else}}
                Empty :(
              {{/if}}
            {{else}}
              {{#if this.pending}}
                {{#each this.pending as |tids|}}
                  {{#each tids.data as |seller|}}
                    <div class="row">
                      <div class="col-sm-11">
                        <div class="row justify-content-between border border-radius-1 mb-4 bg-white">
                          <div class="col-sm-12">
                            <div class="row justify-content-start border border-bottom-1 p-3">
                              <div class="col product-list-text my-auto">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#E81D1D" class="bi bi-patch-check-fill img-fluid mr-1 mb-1" viewBox="0 0 16 16">
                                  <path d="M10.067.87a2.89 2.89 0 0 0-4.134 0l-.622.638-.89-.011a2.89 2.89 0 0 0-2.924 2.924l.01.89-.636.622a2.89 2.89 0 0 0 0 4.134l.637.622-.011.89a2.89 2.89 0 0 0 2.924 2.924l.89-.01.622.636a2.89 2.89 0 0 0 4.134 0l.622-.637.89.011a2.89 2.89 0 0 0 2.924-2.924l-.01-.89.636-.622a2.89 2.89 0 0 0 0-4.134l-.637-.622.011-.89a2.89 2.89 0 0 0-2.924-2.924l-.89.01-.622-.636zm.287 5.984-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7 8.793l2.646-2.647a.5.5 0 0 1 .708.708z"/>
                                </svg>
                                {{seller.shop_name}}
                              </div>
                              {{#each this.status as |data|}}
                                {{#if (eq tids.tid data.tid)}}
                                  {{#if (eq data.sid seller.sid)}}
                                    {{#if (eq data.status 0)}}
                                      <div class="col-auto">
                                        <button type="button" class="btn btn-proof-user font-weight-bold primary-text-color float-right" data-toggle="modal" data-target="#uploadProof" onclick={{action 'setTID' data.tid}}>
                                          <img src="https://res.cloudinary.com/partsku/image/upload/v1625837536/partsku/bill_copy_tczz6s.png">
                                          Upload Proof
                                        </button>
                                      </div>
                                    {{else}}
                                      {{#if (eq data.shipment_status 2)}}
                                        <div class="col-3 align-self-center">have you recieved the order?</div>
                                        <div class="col-1 align-self-center" onclick={{action "changeTransStatus" 3 tids.tid}}>
                                          <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="#8ac273" class="bi bi-check-circle cursor-pointer" viewBox="0 0 16 16">
                                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                            <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                                          </svg>
                                        </div>
                                        <div class="col-1 align-self-center" onclick={{action "changeTransStatus" 5 tids.tid}}>
                                          <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="#ef6060" class="bi bi-x-circle cursor-pointer" viewBox="0 0 16 16">
                                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                          </svg>
                                        </div>
                                      {{else}}
                                      <div class="col-">
                                        <button type="button" class="btn btn-proof-user font-weight-bold primary-text-color float-right" data-toggle="modal" data-target="#viewProof" onclick={{action "showImg" data.trf_proof}}>
                                          <img src="https://res.cloudinary.com/partsku/image/upload/v1625837536/partsku/bill_copy_tczz6s.png">
                                          See Payment Proof
                                        </button>
                                      </div>
                                      {{/if}}
                                    {{/if}}
                                  {{/if}}
                                {{/if}}
                              {{/each}}
                            </div>
                            {{#each seller.data as |data|}}
                              {{#if (eq data.transaction_id tids.tid)}}
                                {{#if (eq seller.sid data.sid)}}
                                  <div class="row border border-bottom-1 p-3">
                                    <div class="col-sm-7">
                                      <div class="row">
                                        <div class="col-sm-4 my-auto">
                                          <div class="d-flex">
                                            <img src="{{data.imgUrl}}" alt="Product Image" class="img-fluid" width="113" height="119">
                                          </div>
                                        </div>
                                        <div class="col align-self-center justify-content-start product-list-text">
                                          {{data.name}}
                                        </div>
                                      </div>
                                    </div>
                                    <div class="col-sm-4 my-auto mx-auto">
                                      <div class="row px-auto">
                                        <div class="col-sm-12 text-left price-text">
                                          {{cart_price data.price data.quantity}}
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                {{/if}}
                              {{/if}}
                            {{/each}}
                            <div class="row justify-content-between">
                              {{#each this.status as |data|}}
                                {{#if (eq data.tid tids.tid)}}
                                  {{#if (eq data.sid seller.sid)}}
                                    <div class="col-sm-6 ml-3 grey-text-color align-self-center">
                                      Transaction ID: <b>{{data.tid}}</b>
                                    </div>
                                    <div class="col-sm-4 p-0 justify-content-center d-flex flex-row">
                                      {{#if (eq data.approval 0)}}
                                        {{#if (eq data.status 0)}}
                                          <img src="https://res.cloudinary.com/partsku/image/upload/v1625321903/partsku/trans_upload_thy6jd.png" width="283px" height="70px">
                                        {{else if (eq data.status 1)}}
                                          <img src="https://res.cloudinary.com/partsku/image/upload/v1625321903/partsku/tans_waiting_b4ui2i.png" width="283px" height="70px">
                                        {{/if}}
                                      {{else if (eq data.approval 1)}}
                                        {{#if (eq data.shipment_status 0)}}
                                          <a href="/user/order/detail">
                                            <img src="https://res.cloudinary.com/partsku/image/upload/v1625837569/partsku/Waiting_Seller_fcie1y.png" width="283px" height="70px">
                                          </a>
                                        {{else if (eq data.shipment_status 1)}}
                                            <img src="https://res.cloudinary.com/partsku/image/upload/v1625747815/partsku/Processed_drwvyc.png" width="283px" height="70px">
                                        {{else if (eq data.shipment_status 2)}}
                                            <img src="https://res.cloudinary.com/partsku/image/upload/v1625747814/partsku/Otw_whtyga.png" width="283px" height="70px">
                                        {{else if (eq data.shipment_status 3)}}
                                            <img src="https://res.cloudinary.com/partsku/image/upload/v1625837548/partsku/Complete-1_zkgam1.png" width="283px" height="70px">
                                        {{else if (eq data.shipment_status 4)}}
                                            <img src="https://res.cloudinary.com/partsku/image/upload/v1625747816/partsku/Rejected_ovece1.png" width="283px" height="70px">
                                        {{/if}}
                                      {{else if (eq data.approval 2)}}
                                        <img src="https://res.cloudinary.com/partsku/image/upload/v1625747816/partsku/Rejected_ovece1.png" width="283px" height="70px">
                                      {{/if}}
                                    </div>
                                  {{/if}}
                                {{/if}}
                              {{/each}}
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  {{/each}}
                {{/each}}
              {{else}}
                No unfinished transaction
              {{/if}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="uploadProof" tabindex="-1" role="dialog" aria-labelledby="uploadproof" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body w-100">
        <div class="container">
          <div class="row float-right">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="row justify-content-center">
            <img id="preview-proof" class="my-5 w-75" src="" width="100%">
          </div>
          <div class="row justify-content-center text-center">
            <input class="input-style mr-5 p-2" type="file" accept="image/*" onchange={{action "inputFoto"}}>
            {{#if this.uploaded}}
              <button id="upload-btn" class="btn upload-btn ml-5" onclick={{action "upload"}}>UPLOAD</button>
              <img id="spinner" class="d-none" src="https://res.cloudinary.com/partsku/image/upload/v1625147893/partsku/Spinner-1s-60px_pifuy6.gif">
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="viewProof" tabindex="-1" role="dialog" aria-labelledby="viewProof" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body show-proof-img w-100 text-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <img id="show-proof-img" src="" alt="" width="100%">
      </div>
    </div>
  </div>
</div>