<style>
  .footer {
    display: none;
  }
</style>
<div class="secondary-color profile-container">
  <div class="container-fluid secondary-color">
    <div class="row justify-content-center mt-5">
      <div class="col-sm-10">
        <div class="row justify-content-center">
          <ProfileCard @class="col-sm-3" @where="seller" />
          <div class="col-sm-3 mx-4">
            <div class="row justify-content-center mb-3">
              <div class="col-sm-11">
                <h4 class="font-weight-bold primary-text-color label-font">
                  SHOP NAME
                </h4>
              </div>
            </div>
            <div class="row justify-content-center mt-3">
              <div class="col-sm-12">
                <input type="text" name="" id=""
                  class="input-font width-100 p-3 px-3 border border-radius-0 primary-text-color" value={{this.shopName}}>
              </div>
            </div>
            <div class="row justify-content-center mt-3">
              <div class="col-sm-11">
                <h4 class="font-weight-bold primary-text-color label-font">
                  EMAIL
                </h4>
              </div>
            </div>
            <div class="row justify-content-center mt-3">
              <div class="col-sm-12">
                <input type="text" name="" id=""
                  class="input-font width-100 p-3 px-3 border border-radius-0 primary-text-color"
                  value={{this.email}}>
              </div>
            </div>
            <div class="row justify-content-center mt-3">
              <div class="col-sm-11">
                <h4 class="font-weight-bold primary-text-color label-font">
                  ACTIVE WHATSAPP NUMBER
                </h4>
              </div>
            </div>
            <div class="row justify-content-center mt-3">
              <div class="col-sm-12 flex-row">
                <label class="prepend-label input-font px-3 p-3 border border-radius-0 border-right-0">+62</label>
                <input type="text" name="" id=""
                  class="input-font width-100 p-3 px-3 border border-radius-0 primary-text-color" value={{this.activeWA}}>
              </div>
            </div>
          </div>
          <div class="col-sm-3 mx-4">
            <div class="row justify-content-center mb-3">
              <div class="col-sm-11">
                <h4 class="font-weight-bold primary-text-color label-font">
                  STORE ADDRESS <font class="red-text-color">*</font>
                </h4>
              </div>
            </div>
            <div class="row justify-content-center mt-3">
              <div class="col-sm-12">
                <textarea name="" id="" cols="50" rows="6"
                  class="input-font width-100 p-3 px-3 border border-radius-0 primary-text-color" value={{shopAddress}}></textarea>
              </div>
            </div>
            <div class="row justify-content-center mt-4">
              <div class="col-sm-12">
                <button onclick={{action "save"}} class="btn btn-primary border-radius-0 btn-brand w-100 primary-color label-font p-3 px-3 mt-4">
                  SAVE EDIT
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>