{{#if (eq @style "catalog")}}
  <style>
    a {
      color: black;
    }

    a:hover {
      text-decoration: none;
    }
  </style>
  <div class="product-card-container">
    <a href="/product-detail/{{@product.pid}}" class="">
      <div class="container">
        <div class="col pcard-img-container justify-content-end">
          <div class="row justify-content-end">
            <span class="product-card-sku">{{@product.sku}}</span>
          </div>
          <div class="row justify-content-center">
            <img class="product-card-img" src="{{this.productImg}}" width="200" height="200">
          </div>
        </div>
        <div class="product-card-info pl-4">
          <div class="col">
            <StarRating @class="" />
            <p class="row product-card-name">{{@product.name}}</p>
            <p class="row product-card-price">Rp {{this.formatedPrice}}</p>
          </div>
        </div>
      </div>
    </a>
  </div>
{{else if (eq @style "seller-p-list")}}
  <div class="row justify-content-between border border-radius-0 p-3 bg-white">
    <div class="col-sm-7">
      <div class="row">
        <div class="col-sm-4 my-auto">
          <div class="d-flex">
            <img src="{{this.productImg}}" alt="Product Image" class="img-fluid" width="113" height="113px">
          </div>
        </div>
        <div class="col-sm justify-content-start text-justify product-list-text">
          {{@product.name}}
        </div>
      </div>
    </div>
    <div class="col-sm-4 my-auto">
      <div class="row">
        <div class="col-sm-4 text-left product-list-text">
          {{@product.price}}
        </div>
        <div class="col-sm-4 text-center">
          <button class="btn" data-toggle="modal" data-target="#edit-product" onclick={{action "editProduct" @product}}>
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#384170" class="bi bi-pencil-square ml-4 cursor-pointer" viewBox="0 0 16 16">
              <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
              <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
            </svg>
          </button>
        </div>
        <div class="col-sm-3 text-right mr-2">
          <button class="btn" data-toggle="modal" data-target="#delete-product" onclick={{action "deleteProduct" @product.pid}}>
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="red" class="bi bi-trash cursor-pointer" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
              <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
{{else if (eq @style "admin-seller-list")}}
  <div class="col-sm-8">
    <div class="row">
      <div class="col-sm-4 my-auto">
        <div class="d-flex">
          <img src="{{shopLogo}}" alt="Product Image" class="img-fluid" width="113px" height="119px">
        </div>
      </div>
      <div class="col-sm-5 store-name-text">
        <div class="row">
          <div class="col-sm-12 p-0">
            {{!-- <img src="../img/check.png" alt="" class="img-fluid my-2"> --}}
            {{sellerAttributes.shop_name}}
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12 p-0">
            <p>
              <small>
                Active now
              </small>
            </p>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-sm-6 px-1 my-auto">
            <button type="button" class="btn-red-reversed" data-toggle="modal" data-target="#view" onclick={{action 'setShopImg' @data.attributes.store_pic}}>
              SHOP PICTURE
            </button>
          </div>
          <div class="col-sm-6 px-1 my-auto">
            <button type="button" class="btn-red" data-toggle="modal" data-target="#view" onclick={{action 'setKTPImg' @data.attributes.ktp_pic}}>
              KTP PICTURE
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-4 my-auto">
    <div class="row justify-content-center">
      {{#if (eq @show "approved")}}
        <div class="col-sm-4">
          <div class="row justify-content-center">
            <span class="cursor-pointer" onclick={{action "editSeller" @data.email}}>
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#8ac273" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
              </svg>
            </span>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="row justify-content-center">
            <span class="cursor-pointer" onclick={{action "deleteSeller" @data.email}}>
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#ef6060" class="bi bi-trash" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
              </svg>
            </span>
          </div>
        </div>
      {{else}}
        <div class="col-sm-4">
          <div class="row justify-content-center">
            <span class="cursor-pointer" onclick={{action "accSeller" @data.email}}>
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#8ac273" class="bi bi-check-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
              </svg>
            </span>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="row justify-content-center">
            <span class="cursor-pointer" onclick={{action "rejectSeller" @data.email}}>
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#ef6060" class="bi bi-x-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
              </svg>
            </span>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
{{/if}}
<div class="modal fade" id="delete-product" tabindex="-1" role="dialog" aria-labelledby="delete-product" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you sure you want to delete this product?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>You cannot recover this product once you delete it!</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" onclick={{action "delete" this.deletePid}}>Yes, I'm sure</button>
        <button type="button" class="btn primary-color white-text-color" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="view" tabindex="-1" role="dialog" aria-labelledby="view" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body show-proof-img w-100 text-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <img id="show-proof-img" src="" alt="" width="100%">
      </div>
    </div>
  </div>
</div>